{
  "main": {
    "name": "main",
    "description": "The main configuration - paths and common settings. Default device - CUDA.",
    "path": {
      "root": ".",
      "data": ".data",
      "storage": {
        "visualizations": ".storage/vis",
        "models": ".storage/models"
      }
    },
    "random_seed": 1234,
    "cuda_device": "CUDA",
    "non_cuda_device": "CPU",
    "tt_split_ratio": 0.8,
    "tv_split_ratio": 0.9,
    "is_visualization_saved": true,
    "is_visualization_shown": false,
    "is_launched_in_notebook": false
  },
  "mlp": {
    "name": "mlp",
    "description": "A simple dense (fully connected) layers neural network.",
    "utilized_dataset": "MNIST",
    "param": {
      "input_dim": 784,
      "hidden_dims": [250, 100],
      "output_dim": 10
    },
    "hparam": {
      "device": null,
      "batch_size": 64,
      "criterion": "CE",
      "optimizer": "ADAM",
      "learning_rate": 0.001,
      "epochs": 10
    }
  },
  "lenet": {
    "name": "lenet",
    "description": "A simple convolutional (+ dense) layers neural network.",
    "utilized_dataset": "MNIST",
    "param": {
      "in_channels": 1,
      "mid_channels": 6,
      "out_channels": 16,
      "kernel_size": 5,
      "pool_kernel_size": 2,
      "input_dim": 256,
      "hidden_dims": [120, 84],
      "output_dim": 10
    },
    "hparam": {
      "device": null,
      "batch_size": 64,
      "criterion": "CE",
      "optimizer": "ADAM",
      "learning_rate": 0.001,
      "epochs": 20
    }
  },
  "alexnet": {
    "name": "alexnet",
    "description": "An AlexNet convolutional neural network model.",
    "utilized_dataset": "CIFAR10",
    "lrf": {
      "device": null,
      "criterion": "CE",
      "optimizer": "ADAM",
      "start_lr": 1e-7,
      "end_lr": 10,
      "num_iter": 100
    },
    "param": {
      "ft": {
        "in_out_channels": [[3, 64], [64, 192], [192, 384], [384, 256], [256, 256]],
        "kernel_size": 3,
        "pool_kernel_size": 2,
        "stride": 2,
        "padding": 1
      },
      "clf": {
        "dims": [[1024, 4096], [4096, 4096], [4096, 10]],
        "dropout": 0.5
      }
    },
    "hparam": {
      "device": null,
      "batch_size": 256,
      "criterion": "CE",
      "optimizer": "ADAM",
      "learning_rate": 0.001,
      "epochs": 25
    }
  },
  "vgg": {
    "name": "vgg11",
    "description": "A VGG convolutional neural network model.",
    "utilized_dataset": "CIFAR10",
    "ds_param": {
      "random_rotation": 5,
      "random_horizontal_flip": 0.5,
      "crop_size": 224,
      "crop_padding": 10,
      "means": [0.485, 0.456, 0.406],
      "stds": [0.229, 0.224, 0.225]
    },
    "lrf": {
      "device": "CPU",
      "criterion": "CE",
      "optimizer": "ADAM",
      "start_lr": 1e-7,
      "end_lr": 10,
      "num_iter": 100
    },
    "param": {
      "preset": {
        "vgg11": [64, "M", 128, "M", 256, 256, "M", 512, 512, "M", 512, 512, "M"],
        "vgg13": [64, 64, "M", 128, 128, "M", 256, 256, "M", 512, 512, "M", 512, 512, "M"],
        "vgg16": [64, 64, "M", 128, 128, "M", 256, 256, 256, "M", 512, 512, 512, "M", 512, 512, 512, "M"],
        "vgg19": [64, 64, "M", 128, 128, "M", 256, 256, 256, 256, "M", 512, 512, 512, 512, "M", 512, 512, 512, 512, "M"]
      },
      "ft": {
        "in_channels": 3,
        "kernel_size": 3,
        "pool_kernel_size": 2,
        "padding": 1,
        "is_batchnorm_used": true
      },
      "avg_pool_size": 7,
      "clf": {
        "dims": [[25088, 4096], [4096, 4096], [4096, 10]],
        "dropout": 0.5
      }
    },
    "hparam": {
      "device": "CPU",
      "batch_size": 128,
      "criterion": "CE",
      "optimizer": "ADAM",
      "learning_rate": 5e-4,
      "epochs": 5
    }
  },
  "resnet": {
    "name": "resnet50",
    "description": "Advanced convolutional neural network with residuals.",
    "utilized_dataset": "CUB200",
    "ds_param": {
      "random_rotation": 5,
      "random_horizontal_flip": 0.5,
      "crop_size": 224,
      "crop_padding": 10,
      "means": [0.485, 0.456, 0.406],
      "stds": [0.229, 0.224, 0.225]
    },
    "lrf": {
      "device": "CPU",
      "criterion": "CE",
      "optimizer": "ADAM",
      "start_lr": 1e-7,
      "end_lr": 10,
      "num_iter": 100
    },
    "param": {
      "preset": {
        "resnet18": {"block": "basic", "n_blocks": [2, 2, 2, 2], "channels": [64, 128, 256, 512]},
        "resnet34": {"block": "basic", "n_blocks": [3, 4, 6, 3], "channels": [64, 128, 256, 512]},
        "resnet50": {"block": "bottleneck", "n_blocks": [3, 4, 6, 3], "channels": [64, 128, 256, 512]},
        "resnet101": {"block": "bottleneck", "n_blocks": [3, 4, 23, 3], "channels": [64, 128, 256, 512]},
        "resnet152": {"block": "bottleneck", "n_blocks": [3, 8, 36, 3], "channels": [64, 128, 256, 512]}
      },
      "output_dim": 200
    },
    "hparam": {
      "device": "CPU",
      "batch_size": 64,
      "criterion": "CE",
      "optimizer": "ADAM",
      "lr_scheduler": "ONE_CYCLE_LR",
      "learning_rate": 1e-3,
      "epochs": 10
    }
  }
}